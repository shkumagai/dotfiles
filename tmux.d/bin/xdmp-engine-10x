#!/bin/bash

PWD=$(cd $(dirname $0); pwd)
TMUX_ROOT=$(cd $PWD/..; pwd)

WINDOW_NAME=$(basename $0)

source ${TMUX_ROOT}/bin/utils

function main
{
    get-passwds
    rows=$(get-row-per-host 5)

    tmux neww -n ${WINDOW_NAME}
    tmux splitw -h

    tmux selectp -t 0;  tmux splitw -v -t ${WINDOW_NAME}.0;  tmux resizep -t ${WINDOW_NAME}.0 -y ${rows}
    tmux selectp -t 1;  tmux splitw -v -t ${WINDOW_NAME}.1;  tmux resizep -t ${WINDOW_NAME}.1  -y ${rows}
    tmux selectp -t 2;  tmux splitw -v -t ${WINDOW_NAME}.2;  tmux resizep -t ${WINDOW_NAME}.2  -y ${rows}
    tmux selectp -t 3;  tmux splitw -v -t ${WINDOW_NAME}.3 #;  tmux resizep -t ${WINDOW_NAME}.3  -y ${rows}

    tmux selectp -t 5;  tmux splitw -v -t ${WINDOW_NAME}.5;  tmux resizep -t ${WINDOW_NAME}.5  -y ${rows}
    tmux selectp -t 6;  tmux splitw -v -t ${WINDOW_NAME}.6;  tmux resizep -t ${WINDOW_NAME}.6  -y ${rows}
    tmux selectp -t 7;  tmux splitw -v -t ${WINDOW_NAME}.7;  tmux resizep -t ${WINDOW_NAME}.7  -y ${rows}
    tmux selectp -t 8;  tmux splitw -v -t ${WINDOW_NAME}.8 #;  tmux resizep -t ${WINDOW_NAME}.9  -y ${rows}

    tmux send -t ${WINDOW_NAME}.0  "$TMUX_ROOT/bin/automate.sh dwh-engine-101 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.1  "$TMUX_ROOT/bin/automate.sh dwh-engine-102 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.2  "$TMUX_ROOT/bin/automate.sh dwh-engine-103 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.3  "$TMUX_ROOT/bin/automate.sh dwh-engine-104 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.4  "$TMUX_ROOT/bin/automate.sh dwh-engine-105 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.5  "$TMUX_ROOT/bin/automate.sh dwh-engine-106 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.6  "$TMUX_ROOT/bin/automate.sh dwh-engine-107 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.7  "$TMUX_ROOT/bin/automate.sh dwh-engine-108 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.8  "$TMUX_ROOT/bin/automate.sh dwh-engine-109 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.9  "$TMUX_ROOT/bin/automate.sh dwh-engine-110 'dstat -tamsl'" C-m
}

# run
main "$@"
