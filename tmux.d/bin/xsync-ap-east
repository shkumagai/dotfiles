#!/bin/bash

PWD=$(cd $(dirname $0); pwd)
TMUX_ROOT=$(cd $PWD/..; pwd)

WINDOW_NAME=$(basename $0)

source ${TMUX_ROOT}/bin/utils

function main
{
    get-passwds
    rows=$(get-row-per-host 6)

    tmux neww -n ${WINDOW_NAME}
    tmux splitw -h -t ${WINDOW_NAME}

    tmux selectp -t 0;  tmux splitw -v -t ${WINDOW_NAME}.0;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.0
    tmux selectp -t 1;  tmux splitw -v -t ${WINDOW_NAME}.1;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.1
    tmux selectp -t 2;  tmux splitw -v -t ${WINDOW_NAME}.2;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.2
    tmux selectp -t 3;  tmux splitw -v -t ${WINDOW_NAME}.3;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.3
    tmux selectp -t 4;  tmux splitw -v -t ${WINDOW_NAME}.4;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.4

    tmux selectp -t 6;  tmux splitw -v -t ${WINDOW_NAME}.6;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.6
    tmux selectp -t 7;  tmux splitw -v -t ${WINDOW_NAME}.7;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.7
    tmux selectp -t 8;  tmux splitw -v -t ${WINDOW_NAME}.8;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.8
    tmux selectp -t 9;  tmux splitw -v -t ${WINDOW_NAME}.9;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.9
    tmux selectp -t 10; tmux splitw -v -t ${WINDOW_NAME}.10; tmux resizep -y ${rows} -t ${WINDOW_NAME}.10

    tmux send -t ${WINDOW_NAME}.0  "$TMUX_ROOT/bin/automate.sh xsync-ap-01 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.1  "$TMUX_ROOT/bin/automate.sh xsync-ap-02 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.2  "$TMUX_ROOT/bin/automate.sh xsync-ap-03 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.3  "$TMUX_ROOT/bin/automate.sh xsync-ap-04 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.4  "$TMUX_ROOT/bin/automate.sh xsync-ap-05 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.5  "$TMUX_ROOT/bin/automate.sh xsync-ap-06 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.6  "$TMUX_ROOT/bin/automate.sh xsync-ap-07 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.7  "$TMUX_ROOT/bin/automate.sh xsync-ap-08 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.8  "$TMUX_ROOT/bin/automate.sh xsync-ap-09 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.9  "$TMUX_ROOT/bin/automate.sh xsync-ap-10 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.10 "$TMUX_ROOT/bin/automate.sh xsync-ap-11 'dstat -tamsl'" C-m
    tmux send -t ${WINDOW_NAME}.11 "$TMUX_ROOT/bin/automate.sh xsync-ap-12 'dstat -tamsl'" C-m
}

# run
main "$@"
