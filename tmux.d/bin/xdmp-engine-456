#!/bin/bash

PWD=$(cd $(dirname $0); pwd)
TMUX_ROOT=$(cd $PWD/..; pwd)
source ${TMUX_ROOT}/bin/utils

WINDOW_NAME=$(basename $0)

function main
{
    get-passwds
    rows=$(get-row-per-host 3)

    tmux neww -n ${WINDOW_NAME}

    tmux selectp -t 0;  tmux splitw -v -t ${WINDOW_NAME}.0;  sleep 0.3;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.0
    tmux selectp -t 1;  tmux splitw -v -t ${WINDOW_NAME}.1;  sleep 0.3;  tmux resizep -y ${rows} -t ${WINDOW_NAME}.1

    tmux send -t ${WINDOW_NAME}.0  "$TMUX_ROOT/bin/automate.sh dwh-master-01/dwh-engine-04 '$@'" C-m
    tmux send -t ${WINDOW_NAME}.1  "$TMUX_ROOT/bin/automate.sh dwh-master-01/dwh-engine-05 '$@'" C-m
    tmux send -t ${WINDOW_NAME}.2  "$TMUX_ROOT/bin/automate.sh dwh-master-01/dwh-engine-06 '$@'" C-m
}

# run
main "$@"
