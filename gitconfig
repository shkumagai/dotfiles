[core]
    excludesfile = ~/.gitignore
    editor = /usr/bin/vim -i NONE -c \"set fenc=utf-8\"
    whitespace = trailing-space,space-before-tab

[color]
    ui = auto

[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    lg = log -p
    glog = log --graph
    glo1 = log --graph --decorate --format=\"%C(yellow)%h%Creset %s\"
    st = status --branch

[diff]
    comapctionHeuristic = true

[push]
    default = current

[fetch]
    prune = true

[credential]
    helper = osxkeychain

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

