# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{pl,py}]
indent_size = 4

[{gitconfig,gitconfig.*}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile,*.mk]
indent_style = tab
